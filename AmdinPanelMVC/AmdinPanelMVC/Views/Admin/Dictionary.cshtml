@using Common.Models.Enums;
@model AmdinPanelMVC.Models.UpdateDictionaryViewModel;

@{
    ViewData["Title"] = "Обновление справочник";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <h2>Обновление справочник</h2>
        <hr />

        <form id="fromDictionaryTypeId">
            <div class="form-group mb-3">
                <label for="dictionaryTypeId" class="col-form-label">Тип справочника</label>
                <select id="dictionaryTypeId" name="DictionaryType" class="form-control">
                    <option value="@DictionaryType.Faculty" selected>Факультеты</option>
                    <option value="@DictionaryType.EducationProgram">Программы образований</option>
                    <option value="@DictionaryType.EducationLevel">Уровни образования</option>
                    <option value="@DictionaryType.EducationDocumentType">Типы документов об образовании</option>
                    <option value="@null">Все</option>
                </select>
            </div>
            <div class="d-flex justify-content-end">
                <div>
                    <button id="updateDictionaryButtonId" type="submit" class="btn btn-primary">Обновить</buttons>
                </div>
            </div>
        </form>

        <hr />

        <div id="dictionaryUpdateStatusContainer">
            @await Component.InvokeAsync("DictionaryUpdateStatus")
        </div>

        <div class="d-flex justify-content-end">
            <button id="updateButtonId" class="btn btn-primary">Обновить</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dictionary.js"></script>
}