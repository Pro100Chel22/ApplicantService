    "/api/auth/registration": {
      "post": {
        "tags": [
          "UserService"
        ],
        "summary": "Регистрация абитуриентов",
        "operationId": "createApplicant",
        "requestBody": {
          "description": "Форма регистрации пользователя с ролью абитуриента",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserApplicant"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokensResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "UserService"
        ],
        "summary": "Вход для абитуриентов",
