    "/api/dictionary/programs": {
      "get": {
        "tags": [
          "DictionaryService"
        ],
        "summary": "Просмотр списка программ",
        "operationId": "getPrograms",
        "parameters": [
          {
            "name": "facultyName",
            "in": "query",
            "description": "Фильтрация по имени факультета",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "educationLevel",
            "in": "query",
            "description": "Фильтрация по уровням образования",
            "required": false,
            "explode": true,
            "schema": {
              "type": "array",
              "items": {
                "type": "integer",
                "format": "int32"
              }
            }
          },
          {
            "name": "educationForm",
            "in": "query",
            "description": "Фильтрация по форме обучения",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "language",
            "in": "query",
            "description": "Фильтрация по форме обучения",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "codeOrNameProgram",
            "in": "query",
            "description": "Фильтрация по коду или названию программы",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProgramPaged"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "Bearer_token": []
          }
        ]
      }
    },
    "/api/dictionary/education_levels": {
      "get": {
        "tags": [
