                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer_token": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "UserApplicant": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "example": "Иван Иванович Иванов"
          },
          "email": {
            "type": "string",
            "example": "applicant@email.com"
          },
          "password": {
            "type": "string",
            "example": "String1"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "applicant@email.com"
          },
          "password": {
            "type": "string",
            "example": "String1"
          }
        }
      },
      "TokenUpdate": {
        "type": "object",
        "properties": {
          "refresh": {
            "type": "string",
            "example": "3EF07447F93CAFB40E667F48F3334649"
          }
        }
      },
      "EmailChange": {
        "type": "object",
        "properties": {
          "newEmail": {
            "type": "string",
            "example": "newApplicant@email.com"
          }
        }
      },
      "PasswordChange": {
        "type": "object",
        "properties": {
          "newPassword": {
            "type": "string",
            "example": "newString1"
          }
        }
      },
      "UserProfileChange": {
        "type": "object",
        "properties": {
          "newFullName": {
            "type": "string",
            "example": "Иван Иванович Иванов"
          }
        }
      },
      "TokensResponse": {
        "type": "object",
        "properties": {
          "refresh": {
            "type": "string",
            "example": "3EF07447F93CAFB40E667F48F3334649"
          },
          "access": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiJ9.eyJwYXlsb2FkIjoi0JLQvtC_0YDQvtGBLCDQl9CQ0KfQldCcPz8_In0.lyOs-Vq66shvnDET9eAQ_9pjhxhwkqf8B_9hhOuq8Yc"
          }
        }
      },
      "PageInfo": {
        "type": "object",
        "properties": {
          "size": {
            "type": "integer",
            "format": "int32"
          },
          "count": {
            "type": "integer",
            "format": "int32"
          },
          "current": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "EducationLevel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "Faculty": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "createTime": {
            "type": "string",
            "format": "date-time"
          },
          "name": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "EducationProgram": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "createTime": {
            "type": "string",
            "format": "date-time"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "code": {
            "type": "string",
            "nullable": true
          },
          "language": {
            "type": "string",
            "minLength": 1
          },
          "educationForm": {
            "type": "string",
            "minLength": 1
          },
          "faculty": {
            "$ref": "#/components/schemas/Faculty"
          },
          "educationLevel": {
            "$ref": "#/components/schemas/EducationLevel"
          }
        }
      },
      "EducationDocumentType": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "createTime": {
            "type": "string",
            "format": "date-time"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "educationLevel": {
            "$ref": "#/components/schemas/EducationLevel"
          },
          "nextEducationLevels": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/EducationLevel"
            }
          }
        }
      },
      "ProgramPaged": {
        "type": "object",
        "properties": {
          "programs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/EducationProgram"
            }
          },
          "pagination": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PageInfo"
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "short_description"
          },
          "error_description": {
            "type": "string",
            "example": "longer description, human-readable"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer_token": {
        "type": "apiKey",
        "name": "Bearer_token",
        "in": "header"
      }
    }
  }
}